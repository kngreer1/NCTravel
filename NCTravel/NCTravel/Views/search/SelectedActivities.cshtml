@model NCTravel.Models.searchViewModel
@{
    ViewBag.Title = "SelectedActivities";
}

<link rel="stylesheet" href="~/Content/animate.css" />


<style>
    .jumbotron {
  
        width: 100%;
    }

    .thumbnail {
        background-color: white;
    }

    .caption {
        text-align: center;
    }
</style>

<br />
<br />
<div class="jumbotron">
    <h1>Search <a class="glyphicon glyphicon-search" style="color: black"></a></h1>
</div>
<div class="panel panel-default">
    <div class="panel-heading">

    @using (Html.BeginForm("Index", "search", FormMethod.Post, new { id = "categorySelect" }))
    {
        <div>
            <fieldset>


                @*<label for="selCategories">Choose a Category:</label>*@
                @Html.DropDownList("categorySelect",
                                 new SelectList(Model.Categories, "CategoryID", "CategoryName"),
                                 new { @onchange = "submit();" })

            </fieldset>
        </div>
    }

</div>
    <div class="panel-body">

        @foreach (var item in Model.ActvitiesInCategory)
        {
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <h3 style="text-align: center;">@item.actProvider</h3>
                    <img src="@item.actImgFile" alt="..." width="150" height="150">
                    <div class="caption">
                        <h3>@item.actName</h3>
                        <p>@item.actPrice</p>
                        <p>
                            <a href="@item.actWebsite" class="btn btn-default" role="button">Website</a>
                        </p>
                    </div>
                </div>
            </div>
        }

    </div>
    <div class="panel-footer">Total Search Results: @Model.NumberOfActivities</div>
</div>